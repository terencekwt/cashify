<h2>Admin Dashboard</h2>

<div class="row-fluid">

<div class="span6">
<h3>Events</h3>
<table class="table table-striped">
<thead>
    <tr>
        <td>Name</td>
        <td>Price</td>
    </tr>
</thead>
<tbody>
<% @items.each do |item| %>
    <tr>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    </tr>
<% end %>
</tbody>
</table>

<h3>Users</h3>
<table class="table table-striped">
<thead>
    <tr>
        <td>Name</td>
        <td>Email</td>
    </tr>
</thead>
<tbody>
<% @users.each do |user| %>
    <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    </tr>
<% end %>
</tbody>
</table>

</div>

<div class="span6">
<h3>Forum Topics</h3>
<table class="table table-striped">
<thead>
    <tr>
        <td>Topic</td>
        <td>Delete</td>
    </tr>
</thead>
<tbody>
<% @boards.each do |board| %>
    <tr>
    <td><%= board.title %></td>
    <td><input type="checkbox" /></td>
    </tr>
<% end %>
</tbody>
</table>

<h3>Bears Icons Upload</h3>
<br/>
<span class="btn btn-file">Upload<input type="file" /></span>

</div>
</div>
